@using WVCApp.Controllers

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Page Title - SB Admin</title>
    <link href="~/Content/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5" style="height: 100%;">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Web Venta Creditos de Carbono</h3></div>
                                <div class="card-body">
                                    <img src="~/Imagenes/WVCLogo.png" alt="logo" width="100%" height="100%" style="padding-bottom: 3.4em; padding-top: 3.4em;"/>
                                </div>
                                <div class="card-footer text-center">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Ingreso al sistema</h3>
                                </div>
                                <div class="card-body">
                                    <form>
                                        <div class="form-group"><label class="small mb-1 formlabel" for="inputEmailAddress">Correo electronico</label><input class="form-control py-4" id="inputEmailAddress" type="email" placeholder="Correo electronico" /></div>
                                        <div class="form-group"><label class="small mb-1 formlabel" for="inputPassword">Contraseña</label><input class="form-control py-4" id="inputPassword" type="password" placeholder="Contraseña" /></div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox"></div>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0"><a class="small" href="@Url.Action("CambioPassword", "Usuarios")">Recuperar contraseña</a><a class="btn btn-primary" href="@Url.Action("Autenticar", "Login")">Login</a></div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a href="@Url.Action("RegistroUsuarioWeb", "Usuarios")">¿Nuevo usuario?</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="form-group d-flex align-items-center justify-content-between" style="width: 50%;">
                                <div style="width: 25%; padding: 10px;">
                                    <img src="~/Imagenes/gobierno.png" alt="logo GOBIERNO" width="100%" height="100%" />
                                </div>
                                <div style="width: 25%; padding: 10px;">
                                    <img src="~/Imagenes/minae.png" alt="logo MINAE" width="100%" height="100%" />
                                </div>
                                <div style="width: 25%; padding: 10px;">
                                    <img src="~/Imagenes/fonafifo.png" alt="logo FONAFIFO" width="100%" height="100%" />
                                </div>
                                <div style="width: 25%; padding: 10px;">
                                    <img src="~/Imagenes/esen.png" alt="logo ESCENCIALS" width="100%" height="100%" />
                                </div>
                            </div>
                    </div>
                    </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy;Todos los derechos reservados. 2020</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>
</html>